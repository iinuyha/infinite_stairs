<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ThemeActivity">

    <TextView
        android:id="@+id/themeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dunggeunmo"
        android:text="CHOOSE THEME"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/basicThemeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp" />

    <ImageButton
        android:id="@+id/basicThemeButton"
        android:layout_width="350dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@+id/themeTitle"
        app:layout_constraintBottom_toTopOf="@+id/christmasThemeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/basic_theme_btn"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/christmasThemeButton"
        android:layout_width="350dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@+id/basicThemeButton"
        app:layout_constraintBottom_toTopOf="@+id/lockedThemeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/christmas_theme_btn"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/lockedThemeButton"
        android:layout_width="350dp"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@+id/christmasThemeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/locked_theme_btn"
        android:background="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>
